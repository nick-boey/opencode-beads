{
  "name": "opencode-beads",
  "version": "0.1.0",
  "description": "Beads issue tracker integration for OpenCode - persistent task memory for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nboey/opencode-beads"
  },
  "keywords": [
    "opencode",
    "beads",
    "issue-tracker",
    "ai-agent",
    "task-management",
    "persistent-memory"
  ],
  "author": "nboey",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "tool",
    "command",
    "skill",
    "local",
    "src/version.ts"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "local:install": "node --loader ts-node/esm local/install.ts"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
